<head>
	<center>
		<h1>My Event</h1>
	</center>
</head>
<body class="container" style="margin-top: 100px;">
	<div class="row">
		<div class="col-md-11 col-md-offset-1">  
			<table class="table">
				<thead>
					<tr>
						<th> Name </th>
						<th> Creat at </th>
						<th> Status </th>
						<thead></thead>
					</tr>
				</thead>
				<tbody>
					<% @my_event.each do |event| %>
					<tr>
						<td><%= event.name %></td>
						<td><%= event.created_at %></td>
						<% if event.published_at == nil %>
						<td><b>Unpublished <b></td>
						<td> <%= link_to 'Add Ticket',new_event_ticket_path(event_id: event.id), class: 'btn btn-primary' %> | <%= link_to 'Publish', publish_path(event_id: event.id), class: 'btn btn-primary' %> | <%= link_to 'Edit Event',edit_event_path(event_id: event.id), class: 'btn btn-primary' %> </td>
						<% else %>
						<td>Published</td>
						<% end %>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</body>