<head>
	<center>
		<h1> Edit your event </h1>
	</center>
</head>
<body class="container" style="margin-top: 100px;">
	<div class="row">
		<%= form_for @event do |f| %>
		<%= hidden_field_tag :event_id, params[:event_id]  %>
		<div class="col-md-6 ">
			<div class="card ">
				<div class="card-block">
					<% if @event.errors.size > 0 %>
					<div class="alert alert-danger">
						<%= @event.errors.full_messages.to_sentence %>
					</div>
					<% end %>
					<center><h4 class="text-primary"> Event </h4></center>
					<div class="form-group">
						<%= f.label :name , class: 'text-info' %>
						<%= f.text_field :name, class: 'form-control'  %>
					</div>
					<div class="form-group">
						<%= f.label 'Starts at', class: 'text-info'  %>
						<%= f.text_field :starts_at, class: 'form-control'  %>
					</div>
					<div class="form-group">
						<%= f.label 'Ends_at', class: 'text-info' %>
						<%= f.text_field :ends_at, class: 'form-control'  %>
					</div>
					<div class="form-group">
						<%= f.label 'Description', class: 'text-info'  %>
						<%= f.text_field :extended_html_description, class: 'form-control'  %>
					</div>
					<div class="form-group">
						<%= f.label 'Image URL', class: 'text-info'  %>
						<%= f.text_field :hero_image_url, class: 'form-control'  %>
					</div>
				</div>
			</div>
		</div>
		
		<div class="col-md-6">
			<div  class="card">
				<div class="card-block">
					<h4 class="text-primary"> Category </h4>
					<div class="form-group">
						
						<%= f.select 'category_id', Category.all.collect {|c| [ c.name, c.id ] },{}, class: "form-control"  %>
						
					</div>
				</div>
			</div>
			<div  class="card">
				<div class="card-block">
					<% if @venue.errors.size > 0 %>
					<div class="alert alert-danger">
						<%= @venue.errors.full_messages.to_sentence %>
					</div>
					<% end %>
					<h4 class="text-primary"> Venue </h4>
					<%= fields_for :venue, @event.venue do |venue| %>
					<div class="form-group">
						<%= venue.text_field :name, class: 'form-control'  %>
					</div>
					<div class="form-group">
						<%= venue.text_field :full_address, class: 'form-control'  %>
					</div>
					<div class="form-group">
						<%= venue.select 'region_id', Region.all.collect {|r| [ r.name, r.id ] },{}, class: "form-control"  %>
					</div>
					<% end %>
				</div>
			</div>
		</div>
		<center>
			<div class="form-group">
				<%= f.submit 'Update event', class: 'btn btn-primary'  %>
			</div>
		</center>
		<%end%>
	</div>
</body>


