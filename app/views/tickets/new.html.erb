<head>
	<center>
		<h1>Create tickets</h1>
	</center>
</head>
<body class="container" style="margin-top: 100px;">
	<%= form_for @ticket, :url => url_for(:controller => 'tickets', :action => 'create') do |f|%>
	<div class="card ">
		<div class="card-block">
			<% if @ticket.errors.size > 0 %>
			<div class="alert alert-danger">
				<%= @ticket.errors.full_messages.to_sentence %>
			</div>
			<% end %>
			<div class="form-group">
				<%= f.label 'Ticket Name' , class: 'text-info' %>
				<%= f.text_field :name, class: 'form-control'  %>
			</div>
			<div class="form-group">
				<%= f.label 'Ticket price', class: 'text-info'  %>
				<%= f.text_field :price, class: 'form-control'  %>
			</div>
			<div class="form-group">
				<%= f.label 'Max quantity', class: 'text-info'  %>
				<%= f.text_field :max_quantity, class: 'form-control'  %>
			</div>
			<div class="form-group">
				<%= f.submit 'Add ticket', class: 'btn btn-primary'  %>
			</div>
			<% end %>
			</div>
			</div>
			<div class="row">
			<center><h1> Created ticket types </h1></center>
		<div class="col-md-11 col-md-offset-1">  
			<table class="table">
				<thead>
					<tr>
						<th> Ticket name </th>
						<th> Ticket price </th>
						<th> Quantity </th>
					</tr>
				</thead>
				<tbody>
					<% @created_ticket.each do |ticket| %>
					<tr>
						<td><%= ticket.name %></td>
						<td><%= ticket.price %></td>
						<td><%= ticket.max_quantity %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
		</body>